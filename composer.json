{
    "name": "spatie/global-ray",
    "description": "Enable Ray in all PHP files on your system",
    "keywords": [
        "spatie",
        "ray",
        "debug",
        "debugging"
    ],
    "homepage": "https://github.com/spatie/global-ray",
    "license": "MIT",
    "authors": [
        {
            "name": "Steve Bauman",
            "email": "info@spatie.be",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "symfony/console": "^4.2|^5.0|^6.0|^7.0",
        "symfony/process": "^4.2|^5.0|^6.0|^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.20"
    },
    "bin": [
        "bin/global-ray"
    ],
    "autoload": {
        "psr-4": {
            "Spatie\\GlobalRay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\GlobalRay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "build": "bin/global-ray build",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "pre-package-uninstall": [
            "bin/global-ray uninstall"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
